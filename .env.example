# ===========================================
# SteppersLife Events - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in values

# ==================== REQUIRED ====================

# Convex Backend (Self-hosted at Toolbox Hosting)
NEXT_PUBLIC_CONVEX_URL=https://convex.toolboxhosting.com

# Authentication Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=
AUTH_SECRET=

# NextAuth Configuration
NEXTAUTH_URL=https://stepperslife.com

# Google OAuth (from Google Cloud Console)
AUTH_GOOGLE_CLIENT_ID=
AUTH_GOOGLE_CLIENT_SECRET=

# Email (Postal - self-hosted at postal.toolboxhosting.com)
POSTAL_API_KEY=
POSTAL_API_URL=https://postal.toolboxhosting.com
FROM_EMAIL=noreply@stepperslife.com
SUPPORT_EMAIL=support@stepperslife.com

# Stripe Payments
STRIPE_SECRET_KEY=sk_live_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# ==================== OPTIONAL ====================

# PayPal (if enabled for organizers)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MERCHANT_ID=
PAYPAL_WEBHOOK_ID=
PAYPAL_ENVIRONMENT=sandbox  # or 'production'
NEXT_PUBLIC_PAYPAL_CLIENT_ID=

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-4BWD73WR13

# Sentry Error Tracking
SENTRY_ORG=
SENTRY_PROJECT=
NEXT_PUBLIC_SENTRY_DSN=

# AI Features (for flyer extraction)
GEMINI_API_KEY=

# Radio Integration (AzuraCast)
AZURACAST_API_KEY=
AZURACAST_API_URL=https://radio.stepperslife.com

# App Configuration
NEXT_PUBLIC_APP_URL=https://stepperslife.com
NEXT_PUBLIC_APP_DOMAIN=stepperslife.com
NEXT_PUBLIC_COOKIE_DOMAIN=.stepperslife.com

# Feature Flags
NEXT_PUBLIC_ENABLE_SEATING_CHARTS=false

# ==================== CI/CD ONLY ====================

# Convex Deployment (for automated deployments)
# CONVEX_DEPLOY_KEY=
